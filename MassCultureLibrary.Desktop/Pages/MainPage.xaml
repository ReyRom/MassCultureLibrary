<Page x:Class="MassCultureLibrary.Desktop.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MassCultureLibrary.Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <StackPanel>
            <Button Click="AnimeButton_Click">
                Добавить аниме
            </Button>
            <Label Content="Введите название аниме"/>
            <TextBox x:Name="AnimeNameTextBox"/>
            <Label Content="Введите дату выхода аниме"/>
            <TextBox x:Name="AnimeReleaseDateTextBox"/>
            <Label Content="Введите количество серий в аниме"/>
            <TextBox x:Name="AnimeSeriesTextBox"/>
            <Label Content="Введите состояние выхода аниме (онгоинг/закончен/в данный момент не выходит)"/>
            <ComboBox x:Name=""/>
        </StackPanel>
    </Grid>
</Page>
